    <script>
        function filterResults() {
            // Get the date value from dropdown and input
            let selectedDate = document.getElementById('dateDropdown').value;
            let typedDate = document.getElementById('dateInput').value;

            // Use the typed date if provided, otherwise use the dropdown value
            let filterDate = typedDate ? typedDate : selectedDate;

            // Get tables and rows
            let winningNumbersTable = document.getElementById('winningNumbersTable').getElementsByTagName('tbody')[0];
            let winnersTable = document.getElementById('winnersTable').getElementsByTagName('tbody')[0];

            filterTableRows(winningNumbersTable, filterDate);
            filterTableRows(winnersTable, filterDate);
        }

        function filterTableRows(tableBody, filterDate) {
            let rows = tableBody.getElementsByTagName('tr');

            for (let i = 0; i < rows.length; i++) {
                let dateCell = rows[i].getElementsByTagName('td')[0];
                if (dateCell) {
                    let dateValue = dateCell.textContent || dateCell.innerText;

                    // Show row if date matches the filterDate, hide otherwise
                    if (dateValue.indexOf(filterDate) > -1) {
                        rows[i].style.display = "";
                    } else {
                        rows[i].style.display = "none";
                    }
                }       
            }
        }
    </script>

